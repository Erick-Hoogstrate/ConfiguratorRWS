group $name$: //$type$ - Actuated via $ASactuatedVia$
  automaton Sensor:
    uncontrollable u_on, u_off;
    location On:
      edge u_off goto Off;
    location Off:
      initial;
      edge u_on  goto On;
  end
  automaton PhysicalRelations:
    location: initial; 
      edge Sensor.u_on  when $ASactuatedVia$.Actuator.On;
      edge Sensor.u_off when $ASactuatedVia$.Actuator.Off;
  end
  alg bool On  = Sensor.On;
  alg bool Off = Sensor.Off;

  svgout id "$name$.lamp" attr "fill" value if Sensor.On: "yellow" else "grey" end file $filename$;
end